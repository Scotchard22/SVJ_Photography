.profile_background
  %div
    %img#contact_image.header.responsive-image{:src => "vlad5-min.jpg"} 
    %h1#contact_text.center-align Contact        
  #contact_form
    .center-align.container
      .row
        %form.col.s12
          .row
            .input-field.col.s6
              %i.material-icons.prefix account_circle
              %input#icon_prefix.validate{:type => "text", :placeholder => "Full Name"}
                %label{:for => "icon_prefix"}
            .input-field.col.s6
              %i.material-icons.prefix phone
              %input#icon_telephone.validate{:type => "tel", :placeholder => "Telephone"}
                %label{:for => "icon_telephone"} 
            %br
            %br    
          .row
            .input-field.col.s12
              %i.material-icons.prefix mode_edit
              %textarea#icon_prefix2.materialize-textarea{:placeholder => "Message"}
              %label{:for => "icon_prefix2"} 
            %br
            %br
            %br  
          .row
            .input-field.col.s12
              %i.material-icons.prefix email
              %input#email.validate{:type => "email", :placeholder => "Email"}
                %label{"data-error" => "wrong", "data-success" => "right", :for => "email"}    
            %br
            %br
          %button.btn.waves-effect.waves-light.submit{:name => "action", :type => "submit"}
            Submit
            %i.material-icons.right send   
          %br
          %br

